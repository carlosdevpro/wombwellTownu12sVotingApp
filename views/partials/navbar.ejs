<script>
  document.addEventListener('DOMContentLoaded', () => {
    const secretEl = document.getElementById('secretTrigger');
    let pressTimer;

    if (!secretEl) {
      console.log('❌ Secret trigger not found');
      return;
    }

    // Desktop
    secretEl.addEventListener('mousedown', () => {
      pressTimer = setTimeout(() => {
        window.location.href = '/admin/secret-tools';
      }, 5000);
    });

    secretEl.addEventListener('mouseup', () => clearTimeout(pressTimer));
    secretEl.addEventListener('mouseleave', () => clearTimeout(pressTimer));

    // Mobile
    secretEl.addEventListener('touchstart', () => {
      pressTimer = setTimeout(() => {
        window.location.href = '/admin/secret-tools';
      }, 5000);
    });

    secretEl.addEventListener('touchend', () => clearTimeout(pressTimer));
  });
</script>
