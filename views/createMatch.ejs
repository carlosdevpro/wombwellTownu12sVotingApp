<%- include('partials/header') %>

<div class="page-center">
  <div class="container">
    <div class="card shadow p-4" style="max-width: 700px; margin: 0 auto">
      <h2 class="text-center mb-4">‚úçÔ∏è Create Match Result</h2>

      <% if (messages.success) { %>
      <div class="alert alert-success text-center">
        <%= messages.success[0] %>
      </div>
      <% } %> <% if (messages.error) { %>
      <div class="alert alert-danger text-center"><%= messages.error[0] %></div>
      <% } %>

      <form method="POST" action="/admin/create-match" id="matchForm">
        <div class="mb-3 d-flex justify-content-between">
          <button
            type="button"
            class="btn btn-outline-primary w-50 me-2"
            onclick="setWombwellTeam('home')"
          >
            üè† Wombwell Home
          </button>
          <button
            type="button"
            class="btn btn-outline-secondary w-50"
            onclick="setWombwellTeam('away')"
          >
            üöå Wombwell Away
          </button>
        </div>

        <div class="mb-3">
          <label for="homeTeam" class="form-label">Home Team</label>
          <input
            type="text"
            class="form-control"
            id="homeTeam"
            name="homeTeam"
            required
          />
        </div>

        <div class="mb-3">
          <label for="awayTeam" class="form-label">Away Team</label>
          <input
            type="text"
            class="form-control"
            id="awayTeam"
            name="awayTeam"
            required
          />
        </div>

        <div class="mb-3 d-flex gap-2">
          <div class="w-50">
            <label for="homeScore" class="form-label">Home Score</label>
            <input
              type="number"
              class="form-control"
              id="homeScore"
              name="homeScore"
              value="0"
              min="0"
              required
            />
          </div>
          <div class="w-50">
            <label for="awayScore" class="form-label">Away Score</label>
            <input
              type="number"
              class="form-control"
              id="awayScore"
              name="awayScore"
              value="0"
              min="0"
              required
            />
          </div>
        </div>

        <!-- Scorers Section -->
        <div class="mb-3">
          <label class="form-label">Add Scorers</label>
          <div class="d-flex gap-2 mb-2">
            <select id="scorerName" class="form-select">
              <% players.forEach(player => { %>
              <option value="<%= player.firstName %> <%= player.lastName %>">
                <%= player.firstName %> <%= player.lastName %>
              </option>
              <% }) %>
            </select>
            <input
              type="number"
              id="goalCount"
              min="1"
              value="1"
              class="form-control"
              style="max-width: 80px"
            />
            <select id="assistName" class="form-select">
              <option value="">Unassisted</option>
              <% players.forEach(player => { %>
              <option value="<%= player.firstName %> <%= player.lastName %>">
                <%= player.firstName %> <%= player.lastName %>
              </option>
              <% }) %>
            </select>
            <button type="button" class="btn btn-success" onclick="addScorer()">
              Add
            </button>
          </div>
          <ul class="list-group mb-2" id="scorerList"></ul>
        </div>

        <!-- Yellow Cards -->
        <div class="mb-3">
          <label class="form-label">üü® Yellow Cards</label>
          <div class="d-flex gap-2 mb-2">
            <select id="yellowCardPlayer" class="form-select">
              <% players.forEach(player => { %>
              <option value="<%= player.firstName %> <%= player.lastName %>">
                <%= player.firstName %> <%= player.lastName %>
              </option>
              <% }) %>
            </select>
            <button
              type="button"
              class="btn btn-warning"
              onclick="addYellowCard()"
            >
              Add
            </button>
          </div>
          <ul class="list-group" id="yellowCardList"></ul>
        </div>

        <!-- Red Cards -->
        <div class="mb-3">
          <label class="form-label">üü• Red Cards</label>
          <div class="d-flex gap-2 mb-2">
            <select id="redCardPlayer" class="form-select">
              <% players.forEach(player => { %>
              <option value="<%= player.firstName %> <%= player.lastName %>">
                <%= player.firstName %> <%= player.lastName %>
              </option>
              <% }) %>
            </select>
            <button type="button" class="btn btn-danger" onclick="addRedCard()">
              Add
            </button>
          </div>
          <ul class="list-group" id="redCardList"></ul>
        </div>

        <!-- Hidden Inputs -->
        <input type="hidden" name="scorers" id="scorersInput" />
        <input type="hidden" name="yellowCards" id="yellowCardsInput" />
        <input type="hidden" name="redCards" id="redCardsInput" />

        <div class="text-center">
          <button class="btn btn-success">‚úÖ Save Match</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function setWombwellTeam(position) {
    if (position === 'home') {
      document.getElementById('homeTeam').value = 'Wombwell Town';
      document.getElementById('homeTeam').readOnly = true;
      document.getElementById('awayTeam').value = '';
      document.getElementById('awayTeam').readOnly = false;
    } else {
      document.getElementById('awayTeam').value = 'Wombwell Town';
      document.getElementById('awayTeam').readOnly = true;
      document.getElementById('homeTeam').value = '';
      document.getElementById('homeTeam').readOnly = false;
    }
  }

  const scorerList = document.getElementById('scorerList');
  const scorersInput = document.getElementById('scorersInput');
  const scorers = [];

  function renderScorers() {
    scorerList.innerHTML = '';
    scorers.forEach((scorer, index) => {
      const li = document.createElement('li');
      li.className =
        'list-group-item d-flex justify-content-between align-items-center';
      li.innerHTML = `
        ${scorer.name} - ${scorer.goals} goal${scorer.goals > 1 ? 's' : ''}
        ${scorer.assist ? '(Assisted by ' + scorer.assist + ')' : ''}
        <button class="btn btn-sm btn-danger" onclick="removeScorer(${index})">‚ùå</button>
      `;
      scorerList.appendChild(li);
    });
    scorersInput.value = JSON.stringify(scorers);
  }

  function addScorer() {
    const name = document.getElementById('scorerName').value;
    const goals = parseInt(document.getElementById('goalCount').value);
    const assist = document.getElementById('assistName').value;
    if (!name || isNaN(goals) || goals < 1) return;

    scorers.push({ name, goals, assist });
    renderScorers();
  }

  function removeScorer(index) {
    scorers.splice(index, 1);
    renderScorers();
  }

  // Yellow/Red Cards
  const yellowCards = [];
  const redCards = [];

  function addYellowCard() {
    const name = document.getElementById('yellowCardPlayer').value;
    yellowCards.push({ name });
    updateCardList('yellowCardList', yellowCards, 'yellowCardsInput');
  }

  function addRedCard() {
    const name = document.getElementById('redCardPlayer').value;
    redCards.push({ name });
    updateCardList('redCardList', redCards, 'redCardsInput');
  }

  function updateCardList(listId, cardArray, inputId) {
    const list = document.getElementById(listId);
    const input = document.getElementById(inputId);
    list.innerHTML = '';
    cardArray.forEach((card, index) => {
      const li = document.createElement('li');
      li.className =
        'list-group-item d-flex justify-content-between align-items-center';
      li.innerHTML = `
        ${card.name}
        <button class="btn btn-sm btn-outline-danger" onclick="removeCard('${listId}', ${index})">‚ùå</button>
      `;
      list.appendChild(li);
    });
    input.value = JSON.stringify(cardArray);
  }

  function removeCard(listId, index) {
    if (listId === 'yellowCardList') {
      yellowCards.splice(index, 1);
      updateCardList('yellowCardList', yellowCards, 'yellowCardsInput');
    } else if (listId === 'redCardList') {
      redCards.splice(index, 1);
      updateCardList('redCardList', redCards, 'redCardsInput');
    }
  }

  document.getElementById('matchForm').addEventListener('submit', function (e) {
    const homeScore = parseInt(document.getElementById('homeScore').value);
    const awayScore = parseInt(document.getElementById('awayScore').value);

    if ((homeScore > 0 || awayScore > 0) && scorers.length === 0) {
      alert('Please add at least one scorer if goals are greater than 0.');
      e.preventDefault();
      return;
    }

    scorersInput.value = JSON.stringify(scorers);
    document.getElementById('yellowCardsInput').value =
      JSON.stringify(yellowCards);
    document.getElementById('redCardsInput').value = JSON.stringify(redCards);
  });

  renderScorers();
</script>

<%- include('partials/footer') %>
