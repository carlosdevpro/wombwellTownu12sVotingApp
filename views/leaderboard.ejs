<%- include('partials/header') %>

<div class="page-center">
  <div class="container">
    <div class="card shadow p-4">
      <h2 class="text-center mb-4">🏅 Leaderboard – Man of the Match Votes</h2>

      <div class="table-responsive">
        <table
          class="table table-bordered table-hover text-center align-middle"
        >
          <thead class="table-dark">
            <tr>
              <th>Rank</th>
              <th>Full Name</th>
              <th>Position</th>
              <th>O🎖️</th>
              <th>P🏅</th>
              <th>Total MOTM</th>
            </tr>
          </thead>
          <tbody>
            <% players.forEach((player, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= player.firstName %> <%= player.lastName %></td>
              <td><%= player.position %></td>
              <td><%= player.motmOpposition || 0 %></td>
              <td><%= player.parentMotmWins || 0 %></td>
              <td><%= player.totalMotm || 0 %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="text-center mt-4">
        <a href="/" class="btn btn-neon-sm">⬅ Back to Home</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
